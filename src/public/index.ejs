<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8">

    <title><%= htmlWebpackPlugin.options.title %></title>

    <style>
        body {
            margin: 0;
            width: 100vw;
            height: 100vh;
        }

        div#displayer {
            position: fixed;
            right: 0px;
            top: 0px;
            width: 200px;
            height: 50px;
            border: solid 1px lightcoral;

            font-family: 'consola';
            font-weight: bold;
            font-size: 20px;
            color: blue;
        }
        button#pause {
            position: fixed;
            top: 10px;
            right: 10px;
            width: 25px;
            height: 25px;
            color: lightgreen;
            background: #c2c2c246;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <div id="container"></div>

    <div id="displayer"></div>
    <button id="pause">II</button>
    <script>
        function display(obj) {
            const e = document.getElementById('displayer');
            if(pause === false)
                e.textContent = JSON.stringify(obj);
        }
        const p = document.getElementById('pause');
        let pause = false;
        p.onclick = () => {
            pause = !pause;
            p.textContent = pause? '>' : 'II';
        };
    </script>
</body>

</html>
